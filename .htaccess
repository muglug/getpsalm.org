Header set Access-Control-Allow-Origin "*"
AddType image/svg+xml svg svgz
AddType application/javascript .js
AddEncoding gzip svgz
<ifmodule mod_deflate.c>
AddOutputFilterByType DEFLATE text/css application/x-javascript application/javascript
</ifmodule>

RewriteEngine On
RewriteBase /
RewriteRule ^r/([a-z0-9]+)$ /views/snippet.php?r=$1 [NC,L,QSA]
RewriteRule ^quickstart/?$ /views/quickstart.php [NC,L,QSA]
RewriteRule ^$ /views/index.php [NC,L,QSA]

RewriteRule ^composer\.*$ - [F,L]
RewriteRule ^includes/?.*$ - [F,L]
RewriteRule ^vendor/?.*$ - [F,L]
RewriteRule ^dbconfig.php.*$ - [F,L]